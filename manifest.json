{
  "manifest_version": 3,
  "name": "Simple Calculator",
  "version": "1.0",
  "description": "Perform basic arithmetic operations in your browser.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
